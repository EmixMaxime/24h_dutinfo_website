{% extends './layout/layout.twig' %}

{% block banner %}
  <section class="header-text">
    <h1 class="header-title">Les 24h des dut informatique</h1>
    <p class="header-description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet a aliquid aut eum mollitia, molestias sit officiis quam, fugit iure nostrum fugiat suscipit assumenda id voluptas corporis. Sed, molestias, quo.</p>
    <p class="header-description l-space-top l-paragraph-divider">C'est le temps de s'incrire!</p>
  </section>
{% endblock banner %}

{% block content %}

  {% import "./macro/form.twig" as form %}
  {% import "./macro/title.twig" as title %}

  <div class="l-section l-section-light">
    <div class="row inscription-wrapper">

      <section class="inscription-section inscription-form">
        {{ title.sectiontitle("Formulaire d'inscription") }}
        <form action="#" method="POST" class="row">

          <div class="form-group-2 row">
            {{ form.field('text', 'Pr√©nom', null, 'first_name', 'first_name') }}
            {{ form.field('text', 'Nom', null, 'last_name', 'last_name') }}
          </div>

          {{ form.field('email', 'Email', null, 'email', 'email') }}

          <div class="field field-animated">
            <label for="iut" class="field-label">Votre IUT</label>
            <select id="iut" name="select" class="field-input field-select">
              <option value="valeur1">Valeur 1</option>
              <option value="valeur2" selected>Valeur 2</option>
              <option value="valeur3">Valeur 3</option>
            </select>
          </div>

        </form>
      </section>

      <section class="inscription-section inscription-informations">
        {{ title.sectiontitle("Informations") }}
      </section>
    </div>
  </div>
{% endblock content %}